isbn = {0270-6474},
issn = {0270-6474},
journal = {The Journal of neuroscience : the official journal of the Society for Neuroscience},
keywords = {cerebellum,classical conditioning,climbing fiber,eyeblink,mossy fiber,purkinje cell},
number = {10},
pages = {2493--2502},
pmid = {17344387},
title = {{Acquisition, extinction, and reacquisition of a cerebellar cortical memory trace.}},
volume = {27},
year = {2007}
}
